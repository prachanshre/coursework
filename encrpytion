#!/bin/bash

# Generate file and sign it
echo "This is a scheduled file created at $(date)" > ~/prachan/scheduled_file.txt
openssl dgst -sha256 -sign ~/prachan/private_key.pem -out ~/prachan/scheduled_signature.bin ~/prachan/scheduled_file.txt

# Encrypt the data
openssl rsautl -encrypt -inkey ~/prachan/public_key_shrestha.pem -pubin -in ~/prachan/scheduled_file.txt -out ~/prachan/secure_scheduled_file.enc

# Send the encrypted file and signature to shrestha
scp ~/prachan/secure_scheduled_file.enc shrestha@systemB:/home/shrestha/shrestha/
scp ~/prachan/scheduled_signature.bin shrestha@systemB:/home/shrestha/shrestha/

